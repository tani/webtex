{
  "name": "webtex-monorepo",
  "version": "0.10.0",
  "private": true,
  "description": "WebTeX - LaTeX to HTML5 translator monorepo",
  "author": {
    "name": "tani",
    "email": "ta2gch@gmail.com"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build:core && npm run build:vscode",
    "build:core": "npm run -w packages/core build",
    "build:vscode": "npm run -w packages/vscode build",
    "test": "npm run test:core",
    "test:core": "npm run -w packages/core test",
    "lint": "npm run lint:core && npm run lint:vscode",
    "lint:core": "npm run -w packages/core lint",
    "lint:vscode": "npm run -w packages/vscode lint",
    "typecheck": "npm run typecheck:core && npm run typecheck:vscode",
    "typecheck:core": "npm run -w packages/core typecheck",
    "typecheck:vscode": "npm run -w packages/vscode typecheck",
    "clean": "npm run clean:core && npm run clean:vscode",
    "clean:core": "npm run -w packages/core clean",
    "clean:vscode": "npm run -w packages/vscode clean",
    "dev:core": "npm run -w packages/core test:watch",
    "dev:vscode": "npm run -w packages/vscode watch"
  },
  "engines": {
    "node": ">= 22.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tani/webtex.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tani/webtex/issues"
  },
  "homepage": "https://github.com/tani/webtex"
}