{
	"name": "webtex",
	"description": "JavaScript LaTeX to HTML5 translator - WebTeX fork with enhanced features",
	"version": "0.8.0",
	"author": {
		"name": "tani",
		"email": "ta2gch@gmail.com"
	},
	"keywords": [
		"webtex",
		"latex",
		"tex",
		"parser",
		"html5",
		"web",
		"javascript"
	],
	"bin": {
		"webtex": "./bin/webtex.js"
	},
	"type": "module",
	"main": "./dist/webtex.node.js",
	"exports": {
		".": {
			"browser": "./dist/webtex.browser.js",
			"node": "./dist/webtex.node.js",
			"default": "./dist/webtex.browser.js"
		}
	},
	"browser": "./dist/webtex.browser.js",
	"files": [
		"bin/",
		"dist/"
	],
	"imports": {
		"#window": {
			"node": "./src/window.node.ts",
			"default": "./src/window.browser.ts"
		}
	},
	"scripts": {
		"clean": "rm -rf dist test/test-results.xml",
		"build": "bun run clean && bun run build.ts",
		"pretest": "bun run build.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:api": "bun test test/api.ts",
		"test:cli": "bun test test/cli.ts",
		"test:parsing": "bun test test/parsing.spec.ts",
		"test:integration": "bun test test/integration/",
		"test:integration:update": "bun test test/integration/ --update-snapshots",
		"test:visual": "bun test test/visual/",
		"test:screenshots": "bun test test/visual/screenshots.spec.ts",
		"test:update-snapshots": "bun test --update-snapshots",
		"typecheck": "tsc --noEmit",
		"lint": "biome check",
		"lint:fix": "biome check --write",
		"format": "biome format --write",
		"format:check": "biome format"
	},
	"dependencies": {
		"@svgdotjs/svg.js": "3.x",
		"gunshi": "^0.26.3",
		"he": "^1.2.0",
		"hyphenation.de": "*",
		"hyphenation.en-us": "*",
		"hypher": "^0.2.5",
		"juice": "^11.0.1",
		"mathjax-full": "3.2.2",
		"prettier": "^3.6.2",
		"slugify": "^1.6.6",
		"svgdom": "^0.1.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.3",
		"@types/he": "^1.2.3",
		"@types/node": "^24.3.1",
		"latex.js": "^0.12.6",
		"peggy": "^5.0.6",
		"playwright": "^1.55.0",
		"typescript": "^5.9.2"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/tani/webtex.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/tani/webtex/issues"
	},
	"homepage": "https://github.com/tani/webtex",
	"engines": {
		"node": ">= 22.0"
	}
}
