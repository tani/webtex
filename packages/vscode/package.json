{
  "name": "webtex-preview",
  "displayName": "WebTeX Preview",
  "description": "Live Previewer for LaTeX",
  "version": "0.18.0",
  "publisher": "masaya",
  "repository": {
    "type": "git",
    "url": "git@github.com:tani/webtex-preview.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:latex"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "icon": "webtex.png",
  "contributes": {
    "commands": [
      {
        "command": "webtex-preview.openPreview",
        "title": "Open LaTeX Preview",
        "category": "WebTeX"
      },
      {
        "command": "webtex-preview.openPreviewToSide",
        "title": "Open LaTeX Preview to the Side",
        "category": "WebTeX"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .tex",
          "command": "webtex-preview.openPreviewToSide",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .tex",
          "command": "webtex-preview.openPreview",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "WebTeX Preview",
      "properties": {
        "webtex-preview.previewUpdateDebounce": {
          "type": "number",
          "default": 200,
          "minimum": 0,
          "description": "Delay in milliseconds before the preview refreshes after text changes. Set to 0 to update immediately."
        }
      }
    },
    "keybindings": [
      {
        "command": "webtex-preview.openPreviewToSide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceExtname == .tex"
      }
    ]
  },
  "scripts": {
    "vscode:package": "vsce package --no-dependencies",
    "vscode:prepublish": "npm run --prefix ../core build && npx tsx build.ts --clean && npx tsx build.ts --production",
    "build": "npm run --prefix ../core build && npx tsx build.ts",
    "build:clean": "npx tsx build.ts --clean",
    "build:prod": "npx tsx build.ts --production --clean",
    "build:watch": "npx tsx build.ts --watch",
    "watch": "npx tsx build.ts --watch",
    "pretest": "npm run build && npx tsc && npm run lint:skip",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check",
    "lint:skip": "echo 'Skipping lint for test run'",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "clean": "npx tsx build.ts --clean",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zx": "^8.0.0"
  },
  "dependencies": {
    "morphdom": "^2.7.7"
  }
}
