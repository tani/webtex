{
  "name": "webtex-preview",
  "displayName": "WebTeX Preview",
  "description": "Live Previewer for LaTeX",
  "version": "0.9.0",
  "publisher": "masaya",
  "repository": {
    "type": "git",
    "url": "git@github.com:tani/webtex-preview.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:latex"
  ],
  "main": "./out/extension.js",
  "browser": "./out/extension.js",
  "icon": "webtex.png",
  "contributes": {
    "commands": [
      {
        "command": "webtex-preview.openPreview",
        "title": "Open LaTeX Preview",
        "category": "WebTeX"
      },
      {
        "command": "webtex-preview.openPreviewToSide",
        "title": "Open LaTeX Preview to the Side",
        "category": "WebTeX"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .tex",
          "command": "webtex-preview.openPreviewToSide",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .tex",
          "command": "webtex-preview.openPreview",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "webtex-preview.openPreviewToSide",
        "key": "ctrl+shift+v",
        "mac": "cmd+shift+v",
        "when": "resourceExtname == .tex"
      }
    ]
  },
  "scripts": {
    "vscode:package": "vsce package",
    "vscode:prepublish": "bun run --cwd ../core compile && bun run compile:prod",
    "compile": "bun run --cwd ../core compile && bun run build.ts",
    "compile:clean": "bun run build.ts --clean",
    "compile:prod": "bun run build.ts --production --clean",
    "compile:watch": "bun run build.ts --watch",
    "watch": "bun run compile:watch",
    "pretest": "bun run compile && bun run lint",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "test": "vscode-test",
    "clean": "bun run build.ts --clean",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/bun": "^1.2.21",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {}
}
