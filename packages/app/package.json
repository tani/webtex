{
  "name": "webtex-app",
  "version": "0.12.0",
  "description": "WebTeX Live Preview - Interactive LaTeX to HTML5 converter",
  "type": "module",
  "author": {
    "name": "tani",
    "email": "ta2gch@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "npm run sync-css && npm run build && npx http-server dist -p 3000 -o",
    "build": "npm run clean && npm run sync-css && npx tsx build.ts",
    "clean": "rm -rf dist",
    "sync-css": "mkdir -p public/css/ && cp -r ../core/src/css/* public/css/",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write"
  },
  "dependencies": {
    "webtex": "file:../core"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "esbuild": "^0.25.9",
    "http-server": "^14.1.1",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
    "zx": "^8.0.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "latex",
    "html",
    "preview",
    "converter",
    "webtex",
    "live-preview"
  ]
}
