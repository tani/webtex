{
  "name": "webtex-app",
  "version": "0.10.0",
  "description": "WebTeX Live Preview - Interactive LaTeX to HTML5 converter",
  "type": "module",
  "author": {
    "name": "tani",
    "email": "ta2gch@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "npm run sync-css && vite --host",
    "build": "npm run sync-css && vite build",
    "preview": "vite preview --host",
    "sync-css": "mkdir -p public/css/ && cp -r ../core/src/css/* public/css/",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write"
  },
  "dependencies": {
    "webtex": "file:../core"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "typescript": "^5.6.3",
    "vite": "^6.0.1"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "latex",
    "html",
    "preview",
    "converter",
    "webtex",
    "live-preview"
  ]
}