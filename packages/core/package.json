{
  "name": "webtex",
  "description": "JavaScript LaTeX to HTML5 translator - WebTeX fork with enhanced features",
  "version": "0.10.0",
  "author": {
    "name": "tani",
    "email": "ta2gch@gmail.com"
  },
  "keywords": [
    "webtex",
    "latex",
    "tex",
    "parser",
    "html5",
    "web",
    "javascript"
  ],
  "bin": {
    "webtex": "./bin/webtex.js"
  },
  "type": "module",
  "main": "./dist/webtex.node.js",
  "exports": {
    ".": {
      "browser": "./dist/webtex.browser.js",
      "node": "./dist/webtex.node.js",
      "default": "./dist/webtex.browser.js"
    }
  },
  "browser": "./dist/webtex.browser.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "imports": {
    "#window": {
      "node": "./src/window.node.ts",
      "default": "./src/window.browser.ts"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && npx tsx build.ts",
    "pretest": "npx tsx build.ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "format": "biome format --write",
    "format:check": "biome format",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@svgdotjs/svg.js": "3.x",
    "@types/parsimmon": "^1.10.9",
    "gunshi": "^0.26.3",
    "he": "^1.2.0",
    "hyphenation.de": "*",
    "hyphenation.en-us": "*",
    "hypher": "^0.2.5",
    "katex": "^0.16.22",
    "parsimmon": "^1.18.1",
    "prettier": "^3.6.2",
    "slugify": "^1.6.6",
    "svgdom": "^0.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.3",
    "@types/he": "^1.2.3",
    "@types/node": "^24.3.1",
    "@rollup/wasm-node": "^4.50.1",
    "esbuild": "^0.25.9",
    "latex.js": "^0.12.6",
    "peggy": "^5.0.6",
    "playwright": "^1.55.0",
    "tsx": "^4.19.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "zx": "^8.0.0"
  },
  "overrides": {
    "rollup": "npm:@rollup/wasm-node@^4.50.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tani/webtex.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tani/webtex/issues"
  },
  "homepage": "https://github.com/tani/webtex",
  "engines": {
    "node": ">= 22.0"
  }
}
